@page "/account/forgotPassword"
@inject IHttpApiClientRequestBuilderFactory ClientFactory;
@layout LoginLayout
<h2>You forgot your password</h2>
<h4>Enter your email.</h4>
<hr />
<div class="row">
    <div class="col-sm">
        <form method="post" onsubmit="@(async () => await SendResetPasswordLink())">
            <div class="form-group">
                <label for="Email">Email</label>
                <input id="Email" bind="@model.Email" class="form-control" />
                <ValidationError Errors="@_errors" FieldName="Email" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>


@functions{
    ForgotPasswordViewModel model = new ForgotPasswordViewModel();
    Dictionary<string, string> _errors;
    async Task SendResetPasswordLink()
    {
        _errors = null;
        await ClientFactory.Create("/api/account/forgotPassword")
            .OnBadRequest<Dictionary<string, string>>(errors => _errors = errors)
            .OnOK( "Please check your email to reset your password.","/login")
            .Post(model);
        StateHasChanged();
    }
}

