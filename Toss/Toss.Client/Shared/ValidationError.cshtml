@if ((Errors?.ContainsKey(FieldName)).GetValueOrDefault(false))
{
    <span class="small form-text text-danger">@GetError()</span>

}
@functions{
    [Parameter]
    string FieldName { get; set; }
    [Parameter]
    ValidationErrorDictonary Errors { get; set; }

    private string GetError()
    {
        return string.Join(", ",Errors[FieldName]);
    }
}
